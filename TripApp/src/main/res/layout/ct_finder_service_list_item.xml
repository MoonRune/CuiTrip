<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/service_detail"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/service_img"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            tools:src="@drawable/ct_default"
            android:scaleType="centerCrop" />



        <TextView
            tools:visibility="gone"
            android:id="@+id/service_reason"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_alignParentBottom="true"
            android:background="@color/ct_blue_circle_stoken"
            android:ellipsize="end"
            tools:text="sto sexy to show"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textColor="@color/ct_white"
            android:textSize="13sp" />

        <ImageView
            tools:visibility="visible"
            android:id="@+id/ct_date"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|top"
            android:src="@drawable/ct_cal" />
        <TextView
            tools:visibility="visible"
            android:id="@+id/service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/author_img"
            android:layout_weight="1"
            tools:text="df"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/ct_white"
            android:textSize="@dimen/ct_ts_2" />
    </RelativeLayout>

    <TextView
        tools:visibility="gone"
        android:id="@+id/service_checking"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="@string/ct_service_checking"
        android:background="#80000000"
        android:textColor="@color/ct_main_color"
        android:textSize="@dimen/ct_ts_2" />
</FrameLayout>