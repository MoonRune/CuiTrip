<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/service_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/service_img"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/content_block"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/service_img"
            android:orientation="horizontal"
            android:paddingLeft="75dp"
            android:paddingRight="@dimen/ct_width_padding"
            android:gravity="center_vertical"
            android:background="@drawable/ct_black_gradient_to_top">

            <TextView
                android:id="@+id/service_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/ct_date"
                android:layout_toRightOf="@+id/author_img"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/ct_white"
                android:textSize="@dimen/ct_ts_2" />

            <TextView
                android:id="@+id/service_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/ct_date"
                android:layout_toRightOf="@+id/author_img"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/ct_white"
                android:textSize="@dimen/ct_ts_5" />

            <ImageView
                android:id="@+id/ct_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ct_cal" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/author_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/ct_width_padding"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            app:border_color="@color/ct_white"
            android:layout_alignBottom="@+id/content_block"
            android:layout_marginBottom="10dp"
            app:border_width="@dimen/ct_logo_border" />
        <TextView
            android:id="@+id/service_reason"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_below="@+id/service_img"
            android:background="@color/ct_red"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/ct_width_padding"
            android:paddingRight="@dimen/ct_width_padding"
            android:singleLine="true"
            android:textColor="@color/ct_white"
            android:textSize="@dimen/ct_ts_5" />
    </RelativeLayout>

    <TextView
        android:id="@+id/service_checking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="@string/ct_service_checking"
        android:background="#80000000"
        android:textColor="@color/ct_white"
        android:textSize="@dimen/ct_ts_2" />
</FrameLayout>