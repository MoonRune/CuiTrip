<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/ct_white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/ct_width_padding"
    android:paddingRight="@dimen/ct_width_padding"
    android:gravity="center_vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/author_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        app:border_color="@color/ct_white"
        app:border_width="@dimen/ct_logo_border"
        tools:src="@drawable/ct_default_user" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="2015/07/01"
            android:textColor="@color/ct_red"
            android:textSize="@dimen/ct_ts_5"
            tools:text="order_time" />

        <TextView
            android:id="@+id/service_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/ct_gray"
            android:textSize="@dimen/ct_ts_5"
            tools:text="service_name" />

        <TextView
            android:id="@+id/order_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ct_position"
            android:drawablePadding="5dp"
            android:singleLine="true"
            android:text="123"
            android:textColor="@color/ct_7c"
            android:textSize="@dimen/ct_ts_5"
            tools:text="order_address" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content"
        android:background="#fffafafa"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/ct_width_padding"
        android:paddingRight="@dimen/ct_width_padding"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/author_img"
            android:singleLine="true"
            android:textColor="@color/ct_blue_gray"
            android:textSize="@dimen/ct_ts_5"
            tools:text="progressing" />
    </LinearLayout>
</LinearLayout>
