<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/ct_width_padding"
        android:paddingRight="@dimen/ct_width_padding"
        android:background="@color/ct_white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/author_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            app:border_color="@color/ct_white"
            app:border_width="@dimen/ct_logo_border" />

        <TextView
            android:id="@+id/service_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@+id/message_time"
            android:layout_toRightOf="@+id/author_img"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/ct_blue_4a"
            android:textSize="@dimen/ct_ts_3" />

        <TextView
            android:id="@+id/service_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_author"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/author_img"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/ct_gray"
            android:textSize="@dimen/ct_ts_5" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/content"
        android:background="#fffafafa"
        android:paddingLeft="@dimen/ct_width_padding"
        android:paddingRight="@dimen/ct_width_padding"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <TextView
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/author_img"
            android:singleLine="true"
            android:textColor="@color/ct_red"
            android:textSize="@dimen/ct_ts_5"
            android:text="2015/07/01"/>
        <TextView
            android:id="@+id/order_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/author_img"
            android:singleLine="true"
            android:textColor="@color/ct_7c"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:text="台湾"
            android:textSize="@dimen/ct_ts_5"
            android:drawableLeft="@drawable/ct_position"
            android:drawablePadding="5dp"/>
        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/author_img"
            android:singleLine="true"
            android:textColor="@color/ct_blue_gray"
            android:textSize="@dimen/ct_ts_5"
            android:text="进行中"/>
    </LinearLayout>
</RelativeLayout>