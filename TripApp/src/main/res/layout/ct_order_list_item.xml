<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/ct_white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/ct_width_padding"
    android:paddingRight="@dimen/ct_width_padding"
    android:paddingTop="15dp"
    android:gravity="top">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/author_img"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/ct_default" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="2015/07/01"
            android:textColor="@color/ct_main_color_light"
            android:textSize="15sp"
            tools:text="order_time" />

        <TextView
            android:layout_marginTop="7dp"
            android:id="@+id/service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/ct_black"
            android:textSize="17sp"
            tools:text="service_name" />

        <TextView
            android:layout_marginTop="7dp"
            android:id="@+id/order_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ct_position"
            android:drawablePadding="5dp"
            android:singleLine="true"
            android:text="123"
            android:textColor="@color/ct_a7"
            android:textSize="13sp"
            tools:text="order_address" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/ct_width_padding"
        android:paddingRight="@dimen/ct_width_padding"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/author_img"
            android:singleLine="true"
            android:textColor="@color/ct_a7"
            android:textSize="13sp"
            tools:text="progressing" />
    </LinearLayout>
</LinearLayout><View
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/ct_divider"/>
</LinearLayout>
