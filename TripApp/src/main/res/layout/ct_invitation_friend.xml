<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ct_content_ll"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ct_white"
    android:gravity="center_horizontal">
    <ImageView
        android:id="@+id/ct_invitation_friend_iv"
        android:layout_marginTop="85dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/trip_logo"/>

    <TextView
        android:id="@+id/ct_invitation_friend_tv"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:singleLine="true"
        android:textSize="17sp"
        android:text="@string/ct_invitation_friends_msg"
        android:drawablePadding="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/ct_blue_green"
        android:background="@drawable/selector_blue_stoken_empty_corner"/>
</LinearLayout>