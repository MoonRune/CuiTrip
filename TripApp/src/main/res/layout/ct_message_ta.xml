<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="10dp"
        android:minHeight="48dp"
        android:background="@drawable/ct_message_right"
        android:padding="10dp"
        android:textColor="@color/ct_text_title"
        android:textSize="@dimen/ct_ts_4"
        android:layout_toLeftOf="@+id/author_img"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/author_img"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:layout_marginRight="10dp"
        app:border_color="@color/ct_common_bg"
        app:border_width="@dimen/ct_logo_border" />
</RelativeLayout>