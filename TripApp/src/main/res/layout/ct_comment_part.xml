<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/ct_comment_author_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="ct_comment_author_name_tv"/>
    <ImageView
        android:id="@+id/ct_comment_author_ava_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/ct_default_user"/>
    <RatingBar
        android:id="@+id/ct_comment_stars_rt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/ct_comment_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="ct_comment_content_tv"/>
</LinearLayout>