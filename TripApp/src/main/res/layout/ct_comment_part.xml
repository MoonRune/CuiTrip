<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ct_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/ct_comment_author_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/ct_black"
        android:textSize="19sp"
        tools:text="ct_comment_author_name_tv"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="10dp"
        android:id="@+id/ct_comment_author_ava_im"
        android:layout_width="64dp"
        android:layout_height="64dp"
        tools:src="@drawable/ct_default_user"/>
    <RatingBar
        android:layout_marginTop="10dp"
        android:id="@+id/ct_comment_stars_rt"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:isIndicator="true"
        android:progressDrawable="@drawable/ct_rating_bar"
        android:stepSize="0.5"
        tools:rating="3.4"
        tools:numStars="5"/>
    <TextView
        android:layout_marginTop="5dp"
        android:textColor="@color/ct_a7"
        android:textSize="17sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:id="@+id/ct_comment_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="ct_comment_content_tv"/>
</LinearLayout>