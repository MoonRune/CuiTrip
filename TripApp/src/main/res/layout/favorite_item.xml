<?xml version="1.0" encoding="utf-8"?>
<com.lab.widget.CanClickSwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ct_swip_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ct_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/selector_red_more"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="19sp"
            android:text="@string/ct_delete"
            android:textColor="@color/ct_white" />
    </RelativeLayout>


    <include
        android:id="@+id/ct_service"
        layout="@layout/ct_recommend_list_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</com.lab.widget.CanClickSwipeLayout>