<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ct_white"
    android:orientation="vertical">

    <EditText
        android:id="@+id/service_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/ct_create_service_title_hint"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/ct_width_padding"
        android:paddingRight="@dimen/ct_width_padding"
        android:paddingTop="20dp"
        android:textColor="@color/ct_text_title"
        android:textColorHint="@color/ct_gray"
        android:textSize="@dimen/ct_ts_2" />

    <View style="@style/ctDivider"
        android:layout_height="1dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <com.lab.widget.PicTextEditView
            android:id="@+id/service_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="@dimen/ct_width_padding"
            android:paddingRight="@dimen/ct_width_padding"
            android:paddingTop="20dp">

        </com.lab.widget.PicTextEditView>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ct_divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="right|center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ct_camera_im"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_white_gray"
            android:src="@drawable/camera_g" />
        <ImageView
            android:id="@+id/ct_photo_im"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_photo_g"
            android:background="@drawable/select_white_gray"/>
    </LinearLayout>
</LinearLayout>