<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:textColor="@color/ct_gray"
        android:textSize="@dimen/ct_ts_4"
        android:text="@string/please_connect_msg"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_marginTop="40dp"
        android:src="@drawable/ct_erweima"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/ct_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:textColor="@color/ct_gray"
        android:textSize="@dimen/ct_ts_4"
        android:text="@string/ct_relation_tips_code_and_wx"/>

    <LinearLayout
        android:id="@+id/ct_call"
        android:background="@drawable/select_blue_corner"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ct_tell"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="44dp"
            android:textColor="@color/ct_white"
            android:textSize="@dimen/ct_ts_4"
            android:text="@string/ct_relation_call"/>
    </LinearLayout>

    <TextView
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/select_blue_corner"
        android:id="@+id/ct_mail"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@color/ct_white"
        android:textSize="@dimen/ct_ts_4"
        android:text="@string/ct_mail"/>
</LinearLayout>