<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/edit_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/ct_width_padding"
        android:paddingRight="@dimen/ct_width_padding">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_login_w"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/shape_white_corner"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ct_contry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/ct_text_title"
                android:textSize="@dimen/ct_ts_4"
                tools:text="+86" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray" />

            <EditText
                android:id="@+id/ct_mobile"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/ct_mobile_hint"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="@color/ct_text_title"
                android:textColorHint="@color/ct_text_hint"
                android:textSize="@dimen/ct_ts_4" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/skyblue_editpage_image_remove" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ct_single_px"
            android:background="@color/ct_divider" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ct_single_px"
            android:background="@color/ct_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/shape_white_corner"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ct_passwd"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/toggle_pw"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/ct_mobile_passwd"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="@color/ct_text_title"
                android:textColorHint="@color/ct_text_hint"
                android:textSize="@dimen/ct_ts_4" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/skyblue_editpage_image_remove" />
        </LinearLayout>

    <Button
        android:id="@+id/ct_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/edit_block"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:background="@drawable/ct_blue_bg"
        android:gravity="center"
        android:text="@string/ct_login_confirm"
        android:textColor="@color/ct_white"
        android:textSize="@dimen/ct_ts_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/ct_go_regist"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_margin="15dp"
            android:background="@drawable/ct_main_bg_around"
            android:gravity="center"
            android:text="@string/ct_login_go_regist"
            android:textColor="@color/ct_main_color"
            android:textSize="@dimen/ct_ts_3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ct_forget_password"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>