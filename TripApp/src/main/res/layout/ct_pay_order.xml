<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/ct_white"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/ct_service_ava"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/ct_default" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/ct_service_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/ct_title"
                    android:textSize="19sp"
                    tools:text="ct_service_name" />

                <TextView
                    android:id="@+id/ct_order_date_buyer_size_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/ct_a7"
                    android:textSize="15sp"
                    tools:text="ct_order_date_buyer_size" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/ct_width_padding"
                android:paddingRight="@dimen/ct_width_padding"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/ct_order_price_whith_currency_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/ct_main_color"
                    android:textSize="15sp"
                    tools:text="twd 1000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/ct_white"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="使用优惠体验"
                android:textColor="@color/ct_title"
                android:textSize="15sp" />

            <Switch
                android:id="@+id/ct_order_discount_sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/ct_order_discount_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ct_back_light_yellow"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:textColor="@color/ct_content"
            android:textSize="15sp"
            tools:text="your issdfsdf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/ct_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="旅程费用"
                    android:textColor="@color/ct_content"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/ct_order_normal_price_with_currency_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ct_black"
                    android:textSize="15sp"
                    tools:text="CNY 100" />
            </LinearLayout>

            <View
                style="@style/order_form_divide"
                android:layout_marginRight="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="优惠体验"
                    android:textColor="@color/ct_content"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/ct_order_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ct_content"
                    android:textSize="15sp"
                    tools:text="-100" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@color/ct_white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:text="费用总计"
                android:textColor="@color/ct_content"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ct_order_final_price_with_currency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="CNY 0.00"
                android:textColor="@color/ct_main_color"
                android:textSize="39sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/select_blue_corner"
            android:gravity="center"
            android:padding="10dp"
            android:text="去支付"
            android:textColor="@color/ct_white_gray"
            android:textSize="19sp" />
    </LinearLayout>
</ScrollView>